  <article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <h3>Released</h3>
    <p>
      <%= @movie.released_on %> (<%= time_ago_in_words(@movie.released_on) %> ago)
    </p>
    <h3>Rating</h3>
    <p>
      <%= @movie.rating %>
    </p>
    <h3>Total Gross</h3>
    <p>
      <%= format_total_gross(@movie) %>
    </p>
  </article>

<nav>
  <%= link_to 'All Movies', root_path %> |
  <%= link_to 'Edit', edit_movie_path(@movie) %> |
  <%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
</nav>

<%= render 'footer' %>